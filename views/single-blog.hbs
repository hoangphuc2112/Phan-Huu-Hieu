                        <span class="px-3 py-1 rounded-full bg-primary/20 border border-primary/30 text-primary text-xs font-bold uppercase tracking-wider">{{ post.category }}</span>
                        <span class="text-gray-400 text-sm">•</span>
                        <span class="text-gray-400 text-sm">{{ post.date }}</span>
                        <span class="text-gray-400 text-sm">•</span>
                        <span class="text-gray-400 text-sm flex items-center gap-1">
                            <span class="material-symbols-outlined text-[16px]">schedule</span> {{ post.readTime }}
