<main class="relative z-10 flex-grow w-full max-w-[1280px] mx-auto px-4 lg:px-10 py-10">
    
    <header class="mb-12 relative">
        <div class="flex flex-col gap-4 max-w-2xl">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-primary/30 bg-primary/10 w-fit">
                <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                <span class="text-xs font-medium text-primary uppercase tracking-wider">Latest Updates</span>
            </div>
            <h1 class="text-5xl md:text-6xl font-black leading-tight tracking-[-0.033em] text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-gray-500">
                MEDIA & MOTION
            </h1>
            <p class="text-[#b09db9] text-lg font-normal leading-relaxed max-w-xl">
                Visual stories told through the lens of modern cinematography. Explore our curated selection of motion graphics and film.
            </p>
        </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <div class="lg:col-span-8 flex flex-col gap-10">
            
            <article class="glass-panel rounded-2xl p-5 md:p-6 glass-card-hover group">
                <div class="relative w-full aspect-video rounded-xl overflow-hidden bg-black/50 mb-6 shadow-2xl">
                    <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105" 
                         style="background-image: url('{{featuredVideo.thumbnail}}');">
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
                    
                    <div class="absolute inset-0 flex items-center justify-center">
                        <button class="flex items-center justify-center rounded-full size-20 bg-white/10 backdrop-blur-sm border border-white/20 text-white transition-transform group-hover:scale-110 hover:bg-primary hover:border-primary">
                            <span class="material-symbols-outlined text-4xl ml-1 fill-current">play_arrow</span>
                        </button>
                    </div>
                    
                    <div class="absolute bottom-4 left-4 flex gap-2">
                        <span class="bg-black/60 backdrop-blur-md px-3 py-1 rounded-lg text-xs font-bold text-white border border-white/10">{{featuredVideo.duration}}</span>
                        <span class="bg-primary/80 backdrop-blur-md px-3 py-1 rounded-lg text-xs font-bold text-white">{{featuredVideo.quality}}</span>
                    </div>
                </div>
                
                <div class="flex flex-col gap-3">
                    <div class="flex items-center justify-between text-[#b09db9] text-sm">
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-lg">schedule</span>
                            <span>{{featuredVideo.date}}</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-lg filled text-primary">visibility</span>
                            <span>{{featuredVideo.views}}</span>
                        </div>
                    </div>
                    <h2 class="text-3xl font-bold text-white group-hover:text-primary transition-colors cursor-pointer">
                        {{featuredVideo.title}}
                    </h2>
                    <p class="text-gray-400 font-body leading-relaxed line-clamp-2">
                        {{featuredVideo.description}}
                    </p>
                    <div class="pt-4 flex items-center gap-4">
                        <button class="text-white text-sm font-bold flex items-center gap-2 group/btn hover:text-primary transition-colors">
                            Watch Full Video 
                            <span class="material-symbols-outlined text-lg transition-transform group-hover/btn:translate-x-1">arrow_forward</span>
                        </button>
                    </div>
                </div>
            </article>

            <div class="glass-panel rounded-2xl p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">movie_filter</span>
                        Recent Projects
                    </h3>
                    <a class="text-xs font-bold text-primary hover:text-white transition-colors" href="#">VIEW ALL</a>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {{#each recentVideos}}
                    <div class="flex flex-col gap-3 group cursor-pointer">
                        <div class="relative w-full aspect-video rounded-xl overflow-hidden bg-black/40">
                            <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-105" 
                                 style="background-image: url('{{this.thumbnail}}');">
                            </div>
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/0 transition-colors"></div>
                            <div class="absolute bottom-2 right-2 bg-black/70 px-2 py-0.5 rounded text-[10px] font-bold">{{this.duration}}</div>
                        </div>
                        <div>
                            <h4 class="text-white text-lg font-bold leading-tight group-hover:text-primary transition-colors">{{this.title}}</h4>
                            <p class="text-[#b09db9] text-sm font-normal mt-1">{{this.description}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

        <aside class="lg:col-span-4 flex flex-col gap-8">
            <div class="glass-panel rounded-xl p-2 flex items-center gap-2">
                <span class="material-symbols-outlined text-gray-400 ml-2">search</span>
                <input class="bg-transparent border-none text-white placeholder-gray-500 focus:ring-0 w-full text-sm" placeholder="Search videos..." type="text"/>
            </div>

            <div class="glass-panel rounded-2xl p-6">
                <h4 class="text-sm font-bold uppercase tracking-wider text-gray-500 mb-4 border-b border-white/10 pb-2">Filter by Category</h4>
                <div class="flex gap-2 flex-wrap">
                    {{#each categories}}
                    <button class="flex h-8 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-surface-dark border border-white/10 text-white px-4 text-sm font-medium hover:border-primary/50 hover:bg-surface-dark/80 hover:text-primary transition-all">
                        {{this}}
                    </button>
                    {{/each}}
                </div>
            </div>

            <div class="glass-panel rounded-2xl p-6">
                <h4 class="text-sm font-bold uppercase tracking-wider text-gray-500 mb-4 border-b border-white/10 pb-2">Trending Now</h4>
                <div class="flex flex-col gap-4">
                    {{#each trendingVideos}}
                    <div class="flex gap-3 items-center group cursor-pointer">
                        <div class="size-16 rounded-lg bg-cover bg-center shrink-0 border border-white/10 group-hover:border-primary/50 transition-colors" 
                             style="background-image: url('{{this.thumbnail}}');">
                        </div>
                        <div>
                            <h5 class="text-white text-sm font-bold leading-tight group-hover:text-primary transition-colors line-clamp-1">{{this.title}}</h5>
                            <p class="text-xs text-gray-500 mt-1">{{this.meta}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>

            <div class="glass-panel rounded-2xl p-6 relative overflow-hidden group">
                <div class="absolute -top-12 -right-12 w-32 h-32 bg-primary/30 rounded-full blur-3xl group-hover:bg-primary/50 transition-colors"></div>
                <span class="material-symbols-outlined text-4xl text-white mb-3">mark_email_unread</span>
                <h4 class="text-lg font-bold text-white mb-2">Join the Creative Club</h4>
                <p class="text-sm text-gray-400 font-body mb-4">Get the latest tutorials, resources, and inspiration delivered weekly.</p>
                <div class="flex flex-col gap-3">
